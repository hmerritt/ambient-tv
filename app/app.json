{
    "expo": {
        "version": "1.6.12",
        "name": "Ambient TV",
        "slug": "ambient-tv",
        "scheme": "ambient-tv",
        "jsEngine": "hermes",
        "orientation": "landscape",
        "icon": "./assets/icon.png",
        "newArchEnabled": true,
        "ios": {
            "icon": "./assets/icon-no-alpha.png",
            "bundleIdentifier": "com.hmerritt.ambient.tv",
            "buildNumber": "1.6.12",
            "supportsTablet": true,
            "requireFullScreen": true,
            "splash": {
                "image": "./assets/blank.png",
                "tabletImage": "./assets/blank.png",
                "resizeMode": "contain",
                "backgroundColor": "#ffffff"
            }
        },
        "android": {
            "versionCode": 30,
            "package": "com.hmerritt.ambient.tv",
            "permissions": ["ACCESS_FINE_LOCATION"],
            "intentFilters": [
                {
                    "action": "MAIN",
                    "category": ["LAUNCHER", "LEANBACK_LAUNCHER"],
                    "autoVerify": false,
                    "data": {}
                },
                {
                    "action": "VIEW",
                    "category": ["DEFAULT", "BROWSABLE"],
                    "autoVerify": false,
                    "data": {}
                }
            ],
            "icon": "./assets/icon.png",
            "splash": {
                "ldpi": "./assets/blank.png",
                "mdpi": "./assets/blank.png",
                "hdpi": "./assets/blank.png",
                "xhdpi": "./assets/blank.png",
                "xxhdpi": "./assets/blank.png",
                "xxxhdpi": "./assets/blank.png",
                "resizeMode": "contain",
                "backgroundColor": "#ffffff"
            },
            "playStoreUrl": "https://play.google.com/store/apps/details?id=com.hmerritt.ambient.tv"
        },
        "androidStatusBar": {
            "hidden": true
        },
        "androidNavigationBar": {
            "visible": "sticky-immersive"
        },
        "web": {
            "name": "Ambient TV",
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/favicon.png"
        },
        "plugins": [
            "./plugins/withAndroidManifestInject.js",
            "./plugins/withDrawableAssets.js",
            "expo-router",
            [
                "expo-build-properties",
                {
                    "android": {
                        "useLegacyPackaging": true,
                        "enableProguardInReleaseBuilds": true,
                        "enableShrinkResourcesInReleaseBuilds": true
                    }
                }
            ],
            [
                "expo-av",
                {
                    "//": "Disables the microphone permission",
                    "microphonePermission": false
                }
            ],
            [
                "expo-navigation-bar",
                {
                    "position": "absolute",
                    "visibility": "hidden",
                    "behavior": "inset-swipe",
                    "backgroundColor": "#00000080"
                }
            ],
            [
                "expo-splash-screen",
                {
                    "image": "./assets/splash.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#ffffff"
                }
            ]
        ],
        "assetBundlePatterns": ["**/*", "./assets/icons/*", "./assets/fonts/*"],
        "updates": {
            "enabled": false,
            "fallbackToCacheTimeout": 0
        },
        "experiments": {
            "typedRoutes": true,
            "reactCompiler": false
        },
        "extra": {
            "eas": {
                "projectId": "23508b3c-d3c7-46c6-9cfb-b7572bc61d50"
            }
        }
    }
}
